{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Population Distribution from 2000 to 2020",
    "width": 700,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W10/main/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "params": [
      {
        "name": "year_selection",
        "bind": {
          "input": "select",
          "options": [
            "2020",
            "2010",
            "2000"
          ],
          "labels": [
            "2020",
            "2010",
            "2000"
          ],
          "name": "Year Selection: "
        }
      }
    ],
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
            "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W10/main/js/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
            "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W10/main/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
          "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/ZaneeeY/Homework_W10/main/data/world_population.csv"
              },
              "key": "Country",
              "fields": ["Population2020", "Population2010", "Population2000", "Capital", "Rank", "Area"]
            }
          },
          {
            "calculate": "datum.Population2020/datum.Area",
            "as": "Population per square kilometer by country in 2020"
          },
          {
            "calculate": "datum.Population2010/datum.Area",
            "as": "Population per square kilometer by country in 2010"
          },
          {
            "calculate": "datum.Population2000/datum.Area",
            "as": "Population per square kilometer by country in 2000"
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "condition": [
              { "test": "year_selection == '2020'", "field": "Population per square kilometer by country in 2020" },
              { "test": "year_selection == '2010'", "field": "Population per square kilometer by country in 2010" },
              { "test": "year_selection == '2000'", "field": "Population per square kilometer by country in 2000" }
            ],
            "field": "Population per square kilometer by country in 2020",
            "title": "Population per km²",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [10, 50, 100, 200],
              "range": ["#efedf5", "#cbc9e0", "#bcbddc", "#726cac", "#120060"]
            }
          },

          "tooltip": [
            {"field": "Rank", "type": "nominal", "title": "Rank of total Population"},
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Capital", "type": "nominal", "title": "Capital"},
            {"field": "Population2020", "type": "quantitative", "title": "Population in 2020", "format": ","},
            {"field": "Population per square kilometer by country in 2020", "type": "quantitative", "title": "Population in 2020 per square km²", "format": ".2f"},
            {"field": "Population2010", "type": "quantitative", "title": "Population in 2010", "format": ","},
            {"field": "Population per square kilometer by country in 2010", "type": "quantitative", "title": "Population in 2010 per square km²", "format": ".2f"},
            {"field": "Population2000", "type": "quantitative", "title": "Population in 2000", "format": ","},
            {"field": "Population per square kilometer by country in 2000", "type": "quantitative", "title": "Population in 2000 per square km²", "format": ".2f"}
          ]
        }
      }
    ],
    "config": {}
  }
